cc_test(
    name = "stdlib_test",
    srcs = ["stdlib_test.cc"],
    deps = [":stdlib"],
)

sh_test(
    name = "file_dependency_test",
    srcs = ["file_dependency_test.sh"],
    data = [
        "@llvm_toolchain//:bin/clang-format",
        "@llvm_toolchain//:lib/libc++.a",
    ],
)

