load("@rules_cc//cc:defs.bzl", "cc_library", "cc_test")

package(default_visibility = [":__subpackages__"])

platform(
    name = "wasm",
    constraint_values = [
        "@platforms//cpu:wasm32",
        "@platforms//os:wasi",
        # ":no_shared_objects",
    ],
)

cc_library(
    name = "stdlib-wasm",
    srcs = ["stdlib.cc"],
    hdrs = ["stdlib.h"],
    features = [
        "-supports_dynamic_linker",
    ],
    target_compatible_with = [
        "@platforms//cpu:wasm32",
        "@platforms//os:wasi",
    ],
)

